---
import SunIcon from '../components/icons/Sun.astro';
//import MoonIcon from '../components/icons/Moon.astro';
import Argentina from '../components/icons/Argentina.astro';
import UnitedStates from '../components/icons/UnitedStates.astro'
import ThemeToggle from '../components/ThemeToggle.astro'
---


<header class="h-14 flex justify-center items-center mx-auto pt-2 sticky top-0 w-full z-10">
    <nav class="
    w-full md:w-3/4 lg:w-1/2 xl:w-2/5 h-full
    border-2 border-gray-500 rounded-full md:px-6 px-3 py-1
    flex flex-wrap flex-row items-center justify-center
     bg-neutral-200/70 dark:bg-black/50 backdrop-blur-2xl
    ">
        <a class=" hover:bg-white/10 p-1 rounded-full px-2 sm:px-3 transition ease-in text-sm sm:text-base capitalize"
            href="#top">Inicio</a>
        <a class="hover:bg-white/10 p-1 rounded-full px-2 sm:px-3 transition ease-in text-sm sm:text-base capitalize"
            href="#project">Proyectos</a>
        <a class="hover:bg-white/10 p-1 rounded-full px-2 sm:px-3 transition ease-in text-sm sm:text-base capitalize"
            href="#about">Sobre mi</a>
        <button type="button" data-dropdown-toggle="language-dropdown-menu"
            class="inline-flex items-center  justify-center hover:bg-white/10 p-1 rounded-full px-2 sm:px-3 transition ease-in text-sm sm:text-base capitalize gap-x-2">
            <Argentina class="size-4" />
            Español
        </button>
        <!-- Dropdown -->
        <div class="z-50 hidden my-4 text-base list-none bg-white divide-y divide-gray-100 rounded-lg shadow dark:bg-gray-700"
            id="language-dropdown-menu">
            <ul class="py-2 font-medium" role="none">
                <li>
                    <a href="#"
                        class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 dark:text-gray-400 dark:hover:bg-gray-600 dark:hover:text-white"
                        role="menuitem">
                        <div class="inline-flex items-center">
                            <Argentina />
                            Español
                        </div>
                    </a>
                </li>
                <li>
                    <a href="#"
                        class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100 dark:text-gray-400 dark:hover:bg-gray-600 dark:hover:text-white"
                        role="menuitem">
                        <div class="inline-flex items-center">
                            <UnitedStates />
                            Ingles
                        </div>
                    </a>
                </li>
            </ul>
        </div>

        <button type="button"
            class="hover:bg-white/10 p-1 rounded-full px-1 sm:px-2 transition ease-in text-sm sm:text-base capitalize" id="theme-toggle" aria-label="Change color scheme">
            <SunIcon />
            <ThemeToggle />
        </button>
    </nav>

</header>