---
const personalImageAlt = "Joaquín Vásquez Calizaya"
import Badge from "../components/Badge.astro"
import LinkedInIcon from "../components/icons/LinkedIn.astro"
import MailIcon from "../components/icons/Mail.astro"
import SocialPill from "../components/SocialPill.astro"
---

<div class="max-w-xl">
  <div class="flex gap-4 mb-4">
    <img
      class="rounded-full shadow-lg size-16"
      src="/joaquin.webp"
      alt={personalImageAlt}
    />
    <a
      href="https://linkedin.com/in/joaquin-vasquez-calizaya"
      target="_blank"
      rel="noopener"
      class="flex items-center transition md:justify-center md:hover:scale-105"
    >
      <Badge>Disponible para trabajar</Badge>
    </a>
  </div>
  <h1
    class="text-4xl font-bold tracking-tight text-gray-800 sm:text-5xl dark:text-white"
  >
    Hey, soy Joaquin
  </h1>
  <p
    class="mt-6 text-xl text-gray-800 dark:[&>strong]:text-sky-200 [&>strong]:text-blue-400 [&>strong]:font-semibold dark:text-gray-300"
  >
  Desarrollador de Software con experiencia en Backend y Automatización de Pruebas. De Buenos Aires, Argentina.
  </p>
  <nav class="flex flex-wrap gap-4 mt-8">
    <SocialPill href="mailto:joaquinvctrabajo@gmail.com">
      <MailIcon class="size-4" />
      Contáctame
    </SocialPill>
    <SocialPill href="https://linkedin.com/in/joaquin-vasquez-calizaya">
      <LinkedInIcon class="size-4" />
      LinkedIn
    </SocialPill>
  </nav>
</div>
